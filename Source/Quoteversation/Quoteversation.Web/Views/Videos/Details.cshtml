@model Quoteversation.Web.ViewModels.Videos.VideoDetailsViewModel
@{
    ViewBag.Title = "Video Details";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default panel-primary">
            <div class="panel-body">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="@this.Model.VideoUrl"></iframe>
                </div>
                <br />
                <p class="text-right"><i>Song title:</i> <strong>@this.Model.SongTitle</strong></p>
                <p class="text-right"><i>Artist:</i> <strong>@this.Model.Artist</strong></p>
            </div>
            <div class="panel-footer">
                <p>
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="label label-default">@tag.Name</span>
                    }
                </p>
                @if (@Model.Uploader != null)
                {
                    <p>Uplodaer: @this.Model.Uploader.UserName</p>
                }
                else
                {
                    <p>Uplodaer: Administrator</p>
                }
            </div>
        </div>
    </div>
</div>