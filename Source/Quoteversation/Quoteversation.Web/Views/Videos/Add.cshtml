@model Quoteversation.Web.InputModels.Videos.VideoInputModel
@{
    ViewBag.Title = "Upload a Video";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Add", "Videos", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.VideoUrl, new { @class = "col-md-2 control-label text-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VideoUrl, new { placeholder = "url ..." })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.SongTitle, new { @class = "col-md-2 control-label text-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SongTitle, new { placeholder = "song title..." })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.Artist, new { @class = "col-md-2 control-label text-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Artist, new { placeholder = "artist" })
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.Tags, new { @class = "col-md-2 control-label text-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tags, new { placeholder = "tags, separated by whitespace" })
            </div>
        </div>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Add video" class="btn btn-primary btn-lg" />
    </div>
}