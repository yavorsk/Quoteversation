@model Quoteversation.Web.InputModels.Images.ImageInputModel
@{
    ViewBag.Title = "Upload an Image";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Add", "Images", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-2 text-right">
            <strong>Image</strong>
        </div>
        <div class="col-md-5">
            <input type="file" name="UploadedImage" class="" />
        </div>
    </div>
    <br />
    
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.Tags, new { @class = "col-md-2 control-label text-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tags, new { placeholder = "tags, separated by whitespace" })
            </div>
        </div>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Add Image" class="btn btn-primary btn-lg" />
    </div>
}
