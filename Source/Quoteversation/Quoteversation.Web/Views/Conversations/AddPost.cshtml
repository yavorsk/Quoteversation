@model Quoteversation.Web.InputModels.Post.PostInputModel
@{
    ViewBag.Title = "AddPost";
}

<h2>Create Post</h2>

@using (Html.BeginForm("AddPost", "Conversations", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.Title, new { @class = "col-md-2 control-label text-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { placeholder = "title..." })
            </div>
        </div>
    </div>
    
    <input type="hidden" name="ConversationId" value=@ViewBag.ConvId />

    if (ViewBag.ContentType == "image")
    {
        <input type="hidden" name="PicId" value=@ViewBag.ContentId />
    }
    if (ViewBag.ContentType == "video")
    {
        <input type="hidden" name="VideoId" value=@ViewBag.ContentId />
    }
    if (ViewBag.ContentType == "quote")
    {
        <input type="hidden" name="QuoteId" value=@ViewBag.ContentId />
    }

    <div class="form-group text-center">
        <input type="submit" value="Add post" class="btn btn-primary btn-lg" />
    </div>
}
