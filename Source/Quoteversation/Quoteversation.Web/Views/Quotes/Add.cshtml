@model Quoteversation.Web.InputModels.Quotes.QuoteInputModel
@{
    ViewBag.Title = "Upload a Quote";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Add", "Quotes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.QuoteText, new { @class = "col-md-2 control-label text-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QuoteText, "StringTextArea", new { placeholder = "quote text..." })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.QuoteAuthor, new { @class = "col-md-2 control-label text-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QuoteAuthor, new { placeholder = "quote author..." })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.Tags, new { @class = "col-md-2 control-label text-right" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tags, new { placeholder = "tags, separated by whitespace" })
            </div>
        </div>
    </div>
    
    <div class="form-group text-center">
        <input type="submit" value="Add quote" class="btn btn-primary btn-lg"/>
    </div>
}