@model IEnumerable<Quoteversation.Web.ViewModels.Home.IndexConversationViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    @foreach (var conv in Model)
    {
        <div class="row">
            <div class="col-md-10">
                <div class="row">
                    <h4>
                        <a href="/123/asd-asd-asd">@conv.Title</a>
                    </h4>
                </div>
                <div class="row">
                    <p>@conv.Description</p>
                </div>
                <div class="row">
                    @foreach (var tag in conv.Tags)
                    {
                        <span class="label label-default">@tag.Name</span>
                    }
                </div>
            </div>
        </div>
        <hr />
    }
</div>